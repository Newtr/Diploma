<h2>Панель администратора</h2>

@if (ViewBag.Message != null)
{
    <div style="color: green; margin-bottom: 10px;">
        @ViewBag.Message
    </div>
}

@if (ViewBag.Error != null)
{
    <div style="color: red; margin-bottom: 10px;">
        @ViewBag.Error
    </div>
}

<form method="post" action="/Admin/SimulateEmergency">
    <button type="submit">Симуляция ЧС</button>
</form>

<a href="/Admin/HelpMessages">Просмотреть сообщения о помощи</a>